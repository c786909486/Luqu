<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

   <style name="main_bottom_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
       <item name="android:textColor">@drawable/main_bottom_text_color</item>
       <item name="android:drawablePadding">8dp</item>
       <item name="android:background">#00000000</item>
    </style>
   <style name="top_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="list_user_name_style">
        <item name="android:textSize">@dimen/user_name_text_size</item>
        <item name="android:textColor">@color/normalTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="normal_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/normalTextColor</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>




</resources>
